<h1 class="fw-bold">Login</h1>

<%= form_with(model: @user, url: '/login') do |f| %>

  <div class="mb-3">
    <%= f.label :name, class: 'form-label' %>
    <%= f.text_field :name, class: 'form-control' %>
    <div class="form-text text-white">No password must be provided as required on this Project's Specs</div>
  </div>

    <%= f.submit "Login", class: 'btn btn-secondary text-white' %>

<% end %>